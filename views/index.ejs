<!DOCTYPE html>
<html lang="<%= res.__('LANG') %>" prefix="og: http://ogp.me/ns#">
<head>
	<title>Silence | <%= res.__('SLOGAN') %></title>

	<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
	<meta name="viewport" content="width=device-width, height=device-height, initial-scale=1.0, user-scalable=no">

	<meta name="description" content="<%= res.__('DESCRIPTION') %>" />
	<link rel="canonical" href="http://<%= req.headers.host %><%= req.url %>" />
	<link rel="shortlink" href="http://<%= req.headers.host %><%= req.url %>" />
	<meta property="og:site_name" content="<%= res.__('Silence') %>" />
	<meta property="og:title" content="<%= res.__('Silence') %>" />
	<meta property="og:description" content="<%= res.__('SLOGAN') %>" />
	<meta property="og:type" content="website" />
	<meta property="og:url" content="http://<%= req.headers.host %><%= req.url %>" />

	<link rel="stylesheet" href="/css/bootstrap.css">
	<link rel="stylesheet" href="/css/font-awesome.css">
	<link rel="stylesheet" href="/css/style.css" media="screen"/>
	<link rel="stylesheet" href="/css/gh-fork-ribbon.css" media="screen"/>
	<link rel="stylesheet" href="/css/github.css" media="screen"/>

	<link rel="shortcut icon" href="/images/favicon.png">

	<script src="/js/jquery.js"></script>

</head>

<body>
	<div class="github-fork-ribbon-wrapper right">
		<div class="github-fork-ribbon">
			<a href="https://github.com/SilenceIM/Silence"><%= res.__('FORK_US') %></a>
		</div>
	</div>
	<div id="wrapper">

		<div id="header" class="content-block">
			<div class="top clearfix">
				<div class="pull-left">
					<h1><a class="scrollTo" href="#wrapper"><img class="logo" src="/images/logo-header.png" alt="Silence" height="60" width="255"><img class="logo-mobile" src="/images/logo-mobile.png" alt="Silence" height="30" width="120"></a></h1>
				</div>
			</div>
			<div class="center">
				<div class="slogan">
					<%= res.__('CATCH_PHRASE') %>
				</div>
				<div class="secondary-slogan">
					<%- res.__('SUBTITLE', '<del>', '</del>') %>
				</div>
			</div>
			<div class="bottom">
				<a class="scrollTo" href="#app">
					<img src="/images/arrow_down.png" alt="">
				</a>
			</div>
		</div>

		<div class="content-block" id="app">
			<div class="container">
				<header class="block-heading cleafix">
					<h4><%= res.__('DESCRIPTION') %></h4>
				</header>
				<div class="block-body">
					<div class="row">
						<div class="col-md-6">
							<h2><%= res.__('GET_THE_APP') %></h2>
							<p class="text-center" id="non-us">
								<a href="https://f-droid.org/app/org.smssecure.smssecure"><img src="/images/fdroid.png" alt="On F-Droid" height="60" width="167"></a>
								<a href="https://play.google.com/store/apps/details?id=org.smssecure.smssecure" id="playstore"><img src="/images/play.png" alt="On Google Play" height="60" width="173"></a>
							</p>
							<p class="text-center" id="us">
								<a href="https://f-droid.org/app/org.smssecure.smssecure"><img src="/images/fdroid.png" alt="On F-Droid" height="60" width="167"></a>
								<button type="button" class="btn btn-link btn-xs" data-toggle="modal" data-target="#USModal"><img src="/images/play.png" alt="On Google Play" height="60" width="173"></a></button>
							</p>
							<p class="text-center">
								<small><%- res.__('BETA_DESCRIPTION', '<a href="/beta">', '</a>') %></small>
							</p>
							<div class="text-center">
								<i class="fa fa-android"></i>
							</div>
						</div>
						<div class="col-md-6">
							<h2><%= res.__('GET_SOURCE_CODE') %></h2>
							<p><%= res.__('SOURCE_CODE_TEXT') %></p>
							<p><a href="https://github.com/SilenceIM/Silence" class="btn btn-o btn-lg"><%= res.__('GITHUB') %></a></p>
							<div class="text-center">
								<i class="fa fa-github"></i>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<% if (commit !== null){ %>
		<div class="content-block" id="git">
			<div class="container text-center">
				<p><%- res.__('LAST_COMMIT', '<a href="'+commit.link+'">'+commit.message+'</a>', '<a href="https://github.com/'+commit.author+'">'+commit.author+'</a>', commit.date) %></p>
			</div>
		</div>
		<% } %>

		<div class="content-block parallax" id="description">
			<div class="container text-center">
				<div class="block-body">
					<div class="row">
						<div class="col-md-4">
							<div class="item">
								<i class="fa fa-magic"></i>
								<h2><%= res.__('EASY') %></h2>
								<p><%= res.__('EASY_TEXT') %></p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="item">
								<i class="fa fa-cogs"></i>
								<h2><%= res.__('RELIABLE') %></h2>
								<p><%= res.__('RELIABLE_TEXT') %></p>
							</div>
						</div>
						<div class="col-md-4">
							<div class="item">
								<i class="fa fa-lock"></i>
								<h2><%= res.__('PRIVATE') %></h2>
								<p><%= res.__('PRIVATE_TEXT') %></p>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-md-push-3 col-md-3">
							<div class="item">
								<i class="fa fa-eye-slash"></i>
								<h2><%= res.__('SAFE') %></h2>
								<p><%= res.__('SAFE_TEXT') %></p>
							</div>
						</div>
						<div class="col-md-push-3 col-md-3">
							<div class="item">
								<i class="fa fa-check"></i>
								<h2><%= res.__('OSS') %></h2>
								<p><%= res.__('OSS_TEXT') %></p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="content-block" id="irc">
			<div class="container">
				<div class="row">
					<div class="col-md-2 text-center">
						<i class="fa fa-comments-o" aria-hidden="true"></i>
					</div>
					<div class="col-md-10">
						<h2><%= res.__('COMMUNITY') %></h2>
						<p><%- res.__('COMMUNITY_TEXT', '<a href="https://webchat.freenode.net/?channels=Silence">', '</a>', '<a href="https://twitter.com/SilenceIM">', '</a>') %></p>
					</div>
				</div>
			</div>
		</div>
		<div class="content-block" id="bitcoin">
			<div class="container">
				<div class="row">
					<div class="col-md-2 col-md-push-10 text-center">
						<i class="fa fa-btc" aria-hidden="true"></i>
					</div>
					<div class="col-md-10 col-md-pull-2">
						<h2><%= res.__('SUPPORT_TITLE') %></h2>
						<p><%= res.__('SUPPORT_TEXT') %></p>
						<p><%- res.__('SUPPORT_TEXT_ADDRESS', '<code>1LoKZXg3bx6kfwAhEFQqS9pgeCE1CFMEJb</code>') %></p>
					</div>
				</div>
			</div>
		</div>

		<div class="content-block" id="footer">
			<div class="container">
				<% if (typeof github != 'undefined'){ %>
				<div class="col-md-3 col-xs-6 github-social text-center">
					<span class="github-btn github-btn-large">
						<a class="gh-btn" href="https://github.com/SilenceIM/Silence">
							<span class="gh-ico text-center"><i class="fa fa-eye"></i></span>
							<span class="gh-text"><%= res.__('GITHUB_BADGE_WATCH') %></span>
						</a>
						<a class="gh-count" href="https://github.com/SilenceIM/Silence"><%= github.subscribers_count %></a>
					</span>
				</div>
				<div class="col-md-3 col-xs-6 github-social">
					<span class="github-btn github-btn-large">
						<a class="gh-btn" href="https://github.com/SilenceIM/Silence">
							<span class="gh-ico text-center"><i class="fa fa-star"></i></span>
							<span class="gh-text"><%= res.__('GITHUB_BADGE_STAR') %></span>
						</a>
						<a class="gh-count" href="https://github.com/SilenceIM/Silence"><%= github.stargazers_count %></a>
					</span>
				</div>
				<div class="col-md-3 col-xs-6 github-social">
					<span class="github-btn github-btn-large">
						<a class="gh-btn" href="https://github.com/SilenceIM/Silence/fork">
							<span class="gh-ico text-center"><i class="fa fa-code-fork"></i></span>
							<span class="gh-text"><%= res.__('GITHUB_BADGE_FORK') %></span>
						</a>
						<a class="gh-count" href="https://github.com/SilenceIM/Silence/fork"><%= github.forks %></a>
					</span>
				</div>
				<div class="col-md-3 col-xs-6 github-social">
					<span class="github-btn github-btn-large">
						<a class="gh-btn" href="https://github.com/SilenceIM/Silence/issues">
							<span class="gh-ico text-center"><i class="fa fa-exclamation"></i></span>
							<span class="gh-text"><%= res.__('GITHUB_BADGE_ISSUE') %></span>
						</a>
						<a class="gh-count" href="https://github.com/SilenceIM/Silence/issues"><%= github.open_issues %></a>
					</span>
				</div>
				<% } %>
			</div>
		</div>

	</div>

	<!-- Warning modal for US users -->
	<div class="modal fade" id="USModal" tabindex="-1" role="dialog" aria-labelledby="USModalLabel">
		<div class="vertical-alignment-helper">
		  <div class="modal-dialog vertical-align-center" role="document">
		    <div class="modal-content">
					<div class="modal-header">
						<h2 class="modal-title"><%= res.__('WARNING') %></h2>
					</div>
		      <div class="modal-body">
		        <p><%- res.__('US_WARNING_MODAL', '<a href="https://f-droid.org/app/org.smssecure.smssecure">', '</a>') %></p>
						<p class="text-center"><a href="https://play.google.com/store/apps/details?id=org.smssecure.smssecure" class="btn btn-o btn-lg"><%= res.__('US_WARNING_MODAL_CONTINUE') %></a></p>
		      </div>
		    </div>
		  </div>
		</div>
	</div>

	<script src="/js/bootstrap.js"></script>
	<script src="/js/jquery-scrollto.js"></script>
	<script src="/js/script.js"></script>

</body>
</html>
